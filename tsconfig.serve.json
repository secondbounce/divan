{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "files": [
    "app/main.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/.unused/*.ts",
    "src/**/*.unused.ts",
    "**/*.unused",
    "**/*.spec.ts"
  ]
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "downlevelIteration": true,    // Required to avoid "Type 'IterableIterator<...>' is not an array type or a string type" for Map.values()
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "~shared/*": ["app/shared/*"]
    },
    "sourceMap": true,
    "target": "es2015",
    "types": [
      "node"
    ]
  },
  "files": [
    "app/main.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/.unused/*.ts",
    "src/**/*.unused.ts",
    "**/*.unused",
    "**/*.spec.ts"
  ]
}
